{
  "name": "nexo-deck-swiper",
  "version": "0.0.1",
  "type": "module",
  "description": "React.js tinder-like swipeable component with typescript support.",
  "main": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/",
    "tag": "latest",
    "directory": "dist"
  },
  "homepage": "https://github.com/kanakkholwal/nexo-deck-swiper#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kanakkholwal/nexo-deck-swiper.git"
  },
  "bugs": "https://github.com/kanakkholwal/nexo-deck-swiper/issues",
  "author": "Kanak Kholwal (@kanakkholwal)",
  "keywords": [
    "react",
    "tinder",
    "swipe",
    "swipeable",
    "card",
    "deck",
    "swiper",
    "swipy"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --c ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "npm run build && changeset publish"
  },
  "dependencies": {
    "react-spring": "^9.7.4"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@eslint/js": "^9.13.0",
    "@types/react": "latest",
    "@types/react-dom": "latest",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "eslint": "^9.13.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.13",
    "globals": "^15.11.0",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.10.0",
    "vite": "^5.4.9"
  },
  "peerDependencies": {
    "react": "latest",
    "react-dom": "latest",
    "vite-plugin-dts": "^4.3.0"
  }
}
